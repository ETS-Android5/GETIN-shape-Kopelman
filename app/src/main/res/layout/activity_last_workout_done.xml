<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LastWorkoutDone">


    <TextView
        android:id="@+id/textView6"
        android:layout_margin="30dp"
        android:textSize="30dp"
        android:textColor="@color/blueeee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Last Workout You Have Done" />

    <TextView
        android:id="@+id/txtLastWorkout"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView9"
        android:textColor="@color/blueeee"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Would You Like To Do It Again?" />

    <Button
        android:id="@+id/btnYes"
        android:textColor="@color/white"
        android:background="@color/blueeee"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="YES" />

    <Button
        android:id="@+id/btnNo"
        android:textColor="@color/white"
        android:background="@color/blueeee"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="No" />
</LinearLayout>