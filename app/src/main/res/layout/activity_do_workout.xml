<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DoWorkout">

    <TextView
        android:id="@+id/textView2"
        android:layout_margin="30dp"
        android:textColor="@color/blueeee"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Choose Time Duration And Start" />

    <Spinner
        android:id="@+id/spinnerTimes"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView7"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/blueeee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:30" />

    <Button
        android:id="@+id/btnGo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/blueeee"
        android:textColor="@color/white"
        android:text="START" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_margin="20dp"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="300dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:background="@color/blueeee"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="STOP WORKOUT" />

    <Button
        android:id="@+id/btnNextEx"
        android:layout_width="100dp"
        android:background="@color/blueeee"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="Next Exercise" />

</LinearLayout>